<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:id="@f/status_bar_latest_event_content" android:layout_width="match_parent" android:layout_height="64dp">
    <include android:layout_width="@d/notification_large_icon_width" android:layout_height="@d/notification_large_icon_height" layout="@g/notification_template_icon_group"/>
    <LinearLayout android:orientation="horizontal" android:id="@f/notification_main_column_container" android:paddingTop="@d/notification_main_column_padding_top" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="@d/notification_large_icon_height" android:layout_weight="1" android:layout_toLeftOf="@f/cancel_action" android:layout_toStartOf="@f/cancel_action">
        <FrameLayout android:id="@f/notification_main_column" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@d/notification_content_margin_start" android:layout_marginRight="8dp" android:layout_marginBottom="8dp" android:layout_weight="1" android:layout_marginStart="@d/notification_content_margin_start" android:layout_marginEnd="8dp"/>
        <FrameLayout android:id="@f/right_side" android:paddingTop="@d/notification_right_side_padding_top" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_marginEnd="8dp">
            <DateTimeView android:textAppearance="@i/TextAppearance_Compat_Notification_Time_Media" android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@f/time" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
            <Chronometer android:textAppearance="@i/TextAppearance_Compat_Notification_Time_Media" android:layout_gravity="top|right|center_vertical|center_horizontal|center|end" android:id="@f/chronometer" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
            <TextView android:textAppearance="@i/TextAppearance_Compat_Notification_Info_Media" android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end" android:id="@f/info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:singleLine="true"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:orientation="horizontal" android:id="@f/media_actions" android:layout_width="wrap_content" android:layout_height="match_parent" android:layoutDirection="ltr"/>
    <include android:layout_width="48dp" android:layout_height="match_parent" android:layout_marginRight="6dp" android:layout_marginEnd="6dp" layout="@g/notification_media_cancel_action"/>
    <ImageView android:id="@f/end_padder" android:layout_width="6dp" android:layout_height="match_parent"/>
</LinearLayout>
